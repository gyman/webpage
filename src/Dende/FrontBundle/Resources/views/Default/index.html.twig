{% extends "base.html.twig" %}

{% block title %}Strona główna - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset("/components/prettyPhoto/js/jquery.prettyPhoto.js") }}"></script>
    <script>
        $(function() {
            $("a[rel^='prettyPhoto']").prettyPhoto({
                social_tools: false,
                allow_resize: true,
                show_title: false,
                
                markup: '<div class="pp_pic_holder"> \
                            <div class="ppt">&nbsp;</div> \
                            <div class="pp_top"> \
                                    <div class="pp_left"></div> \
                                    <div class="pp_middle"></div> \
                                    <div class="pp_right"> \
                                            <a class="pp_close" href="#" style="z-index: 999">Close</a> \
                                    </div> \
                            </div> \
                            <div class="pp_content_container"> \
                                    <div class="pp_left"> \
                                    <div class="pp_right"> \
                                            <div class="pp_content"> \
                                                    <div class="pp_loaderIcon"></div> \
                                                    <div class="pp_fade"> \
                                                            <div class="pp_hoverContainer"> \
                                                                    <a class="pp_next" href="#">next</a> \
                                                                    <a class="pp_previous" href="#">previous</a> \
                                                            </div> \
                                                            <div id="pp_full_res"></div> \
                                                            <div class="pp_details"> \
                                                                    <p class="pp_description"></p> \
                                                                    {pp_social} \
                                                            </div> \
                                                    </div> \
                                            </div> \
                                    </div> \
                                    </div> \
                            </div> \
                            <div class="pp_bottom"> \
                                    <div class="pp_left"></div> \
                                    <div class="pp_middle"></div> \
                                    <div class="pp_right"> \
                                        <a href="#" class="pp_expand" title="Expand the image">Expand</a> \
                                    </div> \
                            </div> \
                    </div> \
                    <div class="pp_overlay"></div>',
            });
        });
    </script>
{% endblock javascripts %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("/components/prettyPhoto/css/prettyPhoto.css") }}" />
{% endblock stylesheets %}

{% block body %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div id="screenshots-carousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->

                {% set screenshots = {
                    1 : { "src" : "/bundles/front/img/screenshots/add_event.png", "title" : "Dodawanie nowego eventu" },
                    2 : { "src" : "/bundles/front/img/screenshots/calendar.png", "title" : "Kalendarz" },
                    3 : { "src" : "/bundles/front/img/screenshots/dashboard.png", "title" : "Dashboard" },
                    4 : { "src" : "/bundles/front/img/screenshots/entry_add.png", "title" : "Dodawanie nowego wejścia" },
                    5 : { "src" : "/bundles/front/img/screenshots/member_edit.png", "title" : "Edycja uczestnika" },
                    6 : { "src" : "/bundles/front/img/screenshots/members.png", "title" : "Lista uczestników" },
                    7 : { "src" : "/bundles/front/img/screenshots/members_2.png", "title" : "Lista uczestników ze szczegółami" },
                    8 : { "src" : "/bundles/front/img/screenshots/navigation.png", "title" : "Nawigacja po serwisie" },
                } %}

                <ol class="carousel-indicators">
                {% for img in screenshots %}
                    <li data-target="#screenshots-carousel" data-slide-to="{{ loop.index }}" {% if loop.index == 1 %} class="active"{% endif %}></li>
                {% endfor %}
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    {% for img in screenshots %}
                    <div class="item{% if loop.index == 1 %} active{% endif %}">
                        <a rel="prettyPhoto[screenshots]" href="{{ asset(img.src) }}" title="{{ img.title }}">
                            <img src="{{ asset(img.src) }}" alt="{{ img.title }}">
                        </a>
{#                        <div class="carousel-caption">
                            {{ loop.index }}. {{ img.title }}
                        </div>#}
                    </div>
                    {% endfor %}
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#screenshots-carousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#screenshots-carousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>



{% endblock %}