{% extends "AccountBundle::layout.html.twig" %}

{% block title %}{{ "profile.title.orders"|trans }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="my-account">
<div class="table-responsive">
      <table class="table table-striped table-bordered text-left my-orders-table">
        <thead>
              <tr class="first last">
                <th>#</th>
                <th>Date</th>
                <th>Ship To</th>
                <th><span class="nobr">Order Total</span></th>
                <th>Status</th>
                <th class="text-center">Actions</th>
              </tr>
        </thead>
        <tbody>
            {% for subscription in data if data|length > 0 %}
              <tr>
                <td>100000022</td>
                <td>4/30/14</td>
                <td>Mr. Alen</td>
                <td><span class="price">$1,306.84</span></td>
                <td class="text-primary"><em>New</em></td>
                <td class="text-center last">
                      <div class="btn-group">
                        <a href="#" class="btn btn-sm btn-info">View Order</a>
                        <a href="#" class="btn btn-sm">Reorder</a>
                      </div>
                </td>
              </tr>
            {% endfor %}
        </tbody>
      </table>
</div>
<div class="pagination-box">
      <ul class="pagination">
        <li class="disabled"><a href="#"><i class="fa fa-angle-left"></i></a></li>
        <li class="active"><span>1</span></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li class="disabled"><a href="#">...</a></li>
        <li><a href="#">9</a></li>
        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
      </ul>
      <i class="pagination-text">Displaying 1 to 10 (of 100 posts)</i>
</div>
</div>
{% endblock %}
