{% extends "AccountBundle::layout.html.twig" %}

{% block title %}{{ "profile.title.orders"|trans }} - {{ parent() }}{% endblock %}

{% block mainCaption %}{{ "orders.title.caption"|trans }}{% endblock %}

{% block content %}
<div class="my-account">
<div class="table-responsive">
      <table class="table table-striped table-bordered text-left my-orders-table">
        <thead>
              <tr class="first last">
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'id') }}</th>
                <th>{{ "orders.table.headers.startDate"|trans }}</th>
                <th>{{ "orders.table.headers.endDate"|trans }}</th>
                <th>{{ "orders.table.headers.status"|trans }}</th>
                <th class="text-center">{{ "orders.table.headers.actions"|trans }}</th>
              </tr>
        </thead>
        <tbody>
            {% for subscription in pagination if pagination|length > 0 %}
              <tr>
                <td>{{ subscription.id }}</td>
                <td>{{ subscription.startDate|date("d.m.Y") }}</td>
                <td>{{ subscription.endDate|date("d.m.Y") }}</td>
                <td class="text-primary"><em>New</em></td>
                <td class="text-center last">
                    <div class="btn-group">
                        <a href="#" class="btn btn-sm">{{ "orders.table.actions.reorder"|trans }}</a>
                        <a href="#" class="btn btn-sm btn-info">{{ "orders.table.actions.invoice"|trans }}</a>
                    </div>
                </td>
              </tr>
            {% endfor %}
        </tbody>
      </table>
</div>
<div class="pagination-box">
    {{ knp_pagination_render(pagination) }}
    <i class="pagination-text">{{ "orders.table.footer.total_elements"|trans({count : pagination.getTotalItemCount}) }}</i>
</div>
</div>
{% endblock %}
