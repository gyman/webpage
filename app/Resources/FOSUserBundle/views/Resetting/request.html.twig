{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-content login-form fos_user_resetting_request">
    <h3 class="title">{{ "account.reset.header"|trans }}</h3>
    
    <p>{{ "account.reset.caption"|trans }}</p>
    
    {% if invalid_username is defined %}
    <div class="alert alert-danger fade in ">
        <i class="fa fa-envelope alert-icon"></i>
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <strong>{{ "account.login.there_were_errors"|trans }}</strong>
        <ul>
            <li>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</li>
        </ul>
    </div>
    {% endif %}
        
    <label>{{ 'resetting.request.username'|trans }} <span class="required">*</span></label>
    <input type="text" id="username" name="username" required="required" class="form-control"/>

    <div class="buttons-box clearfix">
      <button name="_submit" type="submit" class="btn btn-default">{{ 'resetting.request.submit'|trans }}</button>
      <span class="required"><b>*</b> {{ "account.login.required_info"|trans }}</span>
    </div>
</form>
{% endblock fos_user_content %}
